{
  "name": "@riaskov/machinomy-contracts",
  "version": "5.0.0",
  "description": "Machinomy Berry contracts managed by Hardhat",
  "license": "Apache-2.0",
  "homepage": "https://github.com/ARyaskov/machinomy#readme",
  "bugs": {
    "url": "https://github.com/ARyaskov/machinomy/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ARyaskov/machinomy.git"
  },
  "author": "Sergey Ukustov <sergey.ukustov@machinomy.com>",
  "contributors": [
    {
      "name": "Andrei Riaskov",
      "email": "code@riaskov.com"
    }
  ],
  "main": "lib/cjs/src/index.js",
  "module": "lib/esm/src/index.js",
  "types": "lib/types/src/index.d.ts",
  "files": [
    "lib/"
  ],
  "scripts": {
    "build": "yarn format && yarn build:esm && yarn build:cjs && yarn copy-abi:uni && yarn build:types && yarn tree-shaking:lib",
    "build:types": "tsc --project tsconfig.types.json",
    "test": "yarn build && hardhat test",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "coverage": "cross-env SOLIDITY_COVERAGE=true hardhat coverage",
    "copy-abi:uni": "cpx \"artifacts/contracts/Unidirectional.sol/Unidirectional.json\" lib/esm/abi/ && cpx \"artifacts/contracts/Unidirectional.sol/Unidirectional.json\" lib/cjs/abi/ && cpx \"artifacts/contracts/Unidirectional.sol/Unidirectional.json\" abi/",
    "build:esm": "rimraf lib/esm && hardhat compile && tsc --project tsconfig.esm.json",
    "build:cjs": "rimraf lib/cjs && hardhat compile && tsc --project tsconfig.cjs.json",
    "tree-shaking:lib": "rimraf lib/cjs/hardhat.config.* && rimraf lib/esm/hardhat.config.* && rimraf lib/types/hardhat.config.* && rimraf lib/cjs/**/*.map && rimraf lib/esm/**/*.map && rimraf lib/types/**/*.map && rimraf lib/cjs/**/*.d.ts && rimraf lib/esm/**/*.d.ts",
    "hardhat:node": "hardhat node",
    "deploy:local": "hardhat ignition deploy ignition/modules/Unidirectional.ts --network localhost",
    "deploy:uni:polygon": "hardhat ignition deploy ignition/modules/Unidirectional.ts --network polygon --verify",
    "deploy:uni:polygonAmoy": "hardhat ignition deploy ignition/modules/Unidirectional.ts --network polygonAmoy",
    "lint:solidity": "solium -d contracts/",
    "prepublish": "yarn build",
    "postinstall": "yarn build"
  },
  "dependencies": {
    "@machinomy/logger": "^0.2.5",
    "@nomicfoundation/hardhat-ignition": "0.15.4",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-viem": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/contracts": "5.0.2",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "bignumber.js": "*",
    "dotenv": "*",
    "hardhat": "2.23.0-dev.3",
    "humanize-plus": "*",
    "solidity-coverage": "^0.8.12",
    "typechain": "8.3.2",
    "viem": "*"
  },
  "devDependencies": {
    "@machinomy/types-eth-sig-util": "0.0.8",
    "@machinomy/types-ethereumjs-units": "^0.0.2",
    "@metamask/eth-sig-util": "7.0.2",
    "@nomicfoundation/hardhat-ignition-viem": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@types/chai": "4.3.16",
    "@types/chai-as-promised": "7.1.8",
    "@types/humanize-plus": "^1.8.2",
    "@types/mocha": "10.0.6",
    "@types/node": "^20.12.12",
    "chai": "4.4.1",
    "chai-as-promised": "^7.1.2",
    "coveralls": "^3.1.1",
    "cpx": "*",
    "eth-gas-reporter": "^0.2.27",
    "ethlint": "1.2.5",
    "hardhat-gas-reporter": "^2.2.0",
    "mocha": "10.4.0",
    "nyc": "^15.1.0"
  }
}
