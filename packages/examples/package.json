{
  "private": true,
  "name": "@riaskov/iohtee-examples",
  "version": "3.0.0",
  "description": "Examples of IohTee usage",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "author": "Sergey Ukustov <sergey.ukustov@machinomy.com>",
  "contributors": [
    {
      "name": "Andrei Riaskov",
      "email": "code@riaskov.com"
    }
  ],
  "license": "Apache-2.0",
  "keywords": [
    "micropayments",
    "ethereum",
    "iohtee"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ARyaskov/iohtee.git"
  },
  "scripts": {
    "build": "pnpm run format && pnpm run clean && tsc --project tsconfig.json",
    "clean": "rimraf dist",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tsc --project tsconfig.json --noEmit",
    "test": "node --import tsx --test \"src/**/*.test.ts\"",
    "coverage": "exit 0",
    "hub": "tsx src/hub.ts",
    "hub:tokens": "tsx src/hubTokens.ts",
    "machinomy": "tsx src/machinomy.ts",
    "sender": "tsx src/sender.ts",
    "sender:tokens": "tsx src/senderTokens.ts",
    "receiver": "tsx src/receiver.ts",
    "receiver:tokens": "tsx src/receiverTokens.ts",
    "client": "tsx src/client.ts",
    "client:tokens": "tsx src/clientTokens.ts"
  },
  "dependencies": {
    "@riaskov/iohtee": "workspace:*",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "viem": "2.45.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "6.0.0-beta"
  }
}
