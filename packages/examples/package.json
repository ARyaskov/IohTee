{
  "private": true,
  "name": "@riaskov/machinomy-examples",
  "version": "2.0.0",
  "description": "Examples of Machinomy Berry usage",
  "author": "Sergey Ukustov <sergey.ukustov@machinomy.com>",
  "contributors": [
    {
      "name": "Andrei Riaskov",
      "email": "code@riaskov.com"
    }
  ],
  "license": "Apache-2.0",
  "keywords": [
    "micropayments",
    "ethereum",
    "express"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ARyaskov/machinomy.git"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "format": "npx prettier --write \"src/**/*.ts\"",
    "test": "exit 0",
    "coverage": "exit 0",
    "hub": "tsx src/server.ts",
    "run:machinomy": "tsx src/machinomy.ts",
    "sender": "yarn build && DEBUG=* node ./src/sender.js",
    "receiver": "yarn build && DEBUG=* node ./src/receiver.js",
    "senderTokens": "yarn build && DEBUG=* node ./src/senderTokens.js",
    "receiverTokens": "yarn build && DEBUG=* node ./src/receiverTokens.js",
    "clientTokens": "yarn build && DEBUG=* node ./src/clientTokens.js",
    "serverTokens": "yarn build && DEBUG=* node ./src/serverTokens.js"
  },
  "dependencies": {
    "@machinomy/types-bn": "^0.0.3",
    "@riaskov/machinomy": "*",
    "@types/express-serve-static-core": "^4.19.3",
    "@types/fs-extra": "^11.0.4",
    "commander": "^12.1.0",
    "debug": "^4.3.5",
    "decko": "^1.2.0",
    "ethereumjs-util": "^7.1.5",
    "fs-extra": "^11.2.0",
    "nedb": "^1.8.0",
    "prompt": "^1.3.0",
    "request": "^2.88.2",
    "safe-buffer": "^5.2.1",
    "types-rlp": "^0.0.1",
    "uuid": "^10.0.0",
    "viem": "2.15.1"
  },
  "devDependencies": {
    "tsx": "*",
    "typescript": "*"
  },
  "resolutions": {
    "sqlite3": "^5.1.7"
  }
}
