{
  "name": "@riaskov/iohtee-abi-wrapper",
  "version": "2.0.0",
  "description": "Generate TypeScript wrapper class for Solidity smart contract ABI",
  "license": "Apache-2.0",
  "homepage": "https://github.com/ARyaskov/iohtee#readme",
  "bugs": {
    "url": "https://github.com/ARyaskov/iohtee/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ARyaskov/iohtee.git"
  },
  "engines": {
    "node": ">=22"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "dist/bin/iohtee-abi-wrapper.js",
  "files": [
    "dist/",
    "templates/"
  ],
  "scripts": {
    "demo": "tsx src/bin/iohtee-abi-wrapper.ts ./abi/* -o ../contracts/src/abi-wrapper/",
    "build": "yarn format && yarn clean && tsc --project tsconfig.json",
    "clean": "rimraf dist",
    "test": "exit 0",
    "coverage": "exit 0",
    "format": "npx prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "console.table": "^0.10.0",
    "glob": "^10.4.2",
    "handlebars": "^4.7.8",
    "mkdirp": "^3.0.1",
    "viem": "*",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/yargs": "^17.0.32",
    "rimraf": "*"
  }
}
