{
  "private": true,
  "name": "@riaskov/iohtee-playground",
  "version": "2.0.0",
  "description": "Playground for IohTee dapplications",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "author": "Machinomy Team <hello@machinomy.com>",
  "contributors": [
    {
      "name": "Andrei Riaskov",
      "email": "code@riaskov.com"
    }
  ],
  "license": "Apache-2.0",
  "scripts": {
    "build": "pnpm run format && pnpm run clean && tsc --project tsconfig.json",
    "clean": "rimraf dist",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tsc --project tsconfig.json --noEmit",
    "test": "node --import tsx --test \"src/**/*.test.ts\"",
    "coverage": "exit 0",
    "start": "tsx watch src/main.ts",
    "start:prod": "node dist/main.js"
  },
  "dependencies": {
    "dotenv": "*",
    "fastify": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "prettier": "*",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "6.0.0-beta"
  }
}
