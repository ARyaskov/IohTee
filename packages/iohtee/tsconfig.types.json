{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "sourceRoot": "src/",
    "inlineSourceMap": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "lib/types",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.ts",
    "src/storage/**/migrations/**"
  ]
}
