{
  "name": "@riaskov/iohtee",
  "version": "2.0.0",
  "description": "Micropayments lib for EVM",
  "author": "Sergey Ukustov <sergey.ukustov@machinomy.com>",
  "contributors": [
    {
      "name": "Andrei Riaskov",
      "email": "code@riaskov.com"
    }
  ],
  "license": "Apache-2.0",
  "keywords": [
    "micropayments",
    "ethereum",
    "state channels"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ARyaskov/IohTee.git"
  },
  "scripts": {
    "clean:lib": "npx rimraf ./lib",
    "clean:migrations": "npx rimraf lib/storage/**/migrations/*.d.ts",
    "build:webpack": "npx webpack --config webpack.config.js",
    "build": "yarn format && yarn build:esm && yarn build:cjs && yarn build:types && yarn tree-shaking:lib",
    "build:types": "tsc --project tsconfig.types.json",
    "build:esm": "npx rimraf lib/esm && tsc --project tsconfig.esm.json",
    "build:cjs": "npx rimraf lib/cjs && tsc --project tsconfig.cjs.json",
    "tree-shaking:lib": "npx rimraf lib/cjs/**/*.map && npx rimraf lib/esm/**/*.map && npx rimraf lib/types/**/*.map && npx rimraf lib/cjs/**/*.d.ts && npx rimraf lib/esm/**/*.d.ts",
    "format": "npx prettier --write \"src/**/*.ts\"",
    "prepublish": "yarn lint && yarn build",
    "lint": "tslint --format stylish --project .",
    "migrate:postgresql": "db-migrate up --migrations-dir='./lib/storage/postgresql/migrations'",
    "migrate:sqlite": "db-migrate up --migrations-dir='./lib/storage/sqlite/migrations'",
    "migrate": "yarn migrate:postgresql && yarn migrate:sqlite",
    "integration_test": "yarn build && mocha integration_test/**/*.test.js",
    "test:all": "yarn test:nedb && yarn test:postgresql && yarn test:sqlite",
    "test:nedb": "DB_URL='nedb://' yarn test:pure",
    "test:postgresql": "DB_URL='postgresql://testuser:testpassword@127.0.0.1/testdb' yarn test:pure",
    "test:sqlite": "DB_URL='sqlite://./testdb.sqlite3' yarn test:pure",
    "test:pure": "ts-mocha -p tsconfig.json ./**/*.test.ts",
    "test": "yarn test:sqlite && yarn test:nedb && yarn test:postgresql",
    "coverage": "yarn build && nyc --reporter=lcov yarn run test"
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "source": "./src/index.ts",
  "types": "./lib/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    }
  },
  "files": [
    "lib/",
    "migrations/",
    "examples/"
  ],
  "dependencies": {
    "@machinomy/logger": "^0.2.5",
    "@machinomy/types-bn": "^0.0.3",
    "@machinomy/types-eth-sig-util": "^0.0.8",
    "@metamask/eth-sig-util": "^7.0.2",
    "@riaskov/iohtee-contracts": "^5.0.5",
    "@seald-io/nedb": "^4.0.4",
    "await-semaphore": "^0.1.3",
    "browser-or-node": "^1.0.2",
    "commander": "^2.9.0",
    "connection-string": "^0.5.3",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "db-migrate-sqlite3": "^0.5.0",
    "debug": "^3.1.0",
    "ethereumjs-util": "^5.1.5",
    "ethers": "^6.13.0",
    "prompt": "^1.0.0",
    "request": "*",
    "safe-buffer": "^5.1.2",
    "types-rlp": "^0.0.1",
    "uuid": "^3.2.1",
    "viem": "*"
  },
  "peerDependencies": {
    "better-sqlite3": "11.0.0",
    "pg": "8.12.0"
  },
  "devDependencies": {
    "@machinomy/types-ethereumjs-util": "^0.0.12",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/better-sqlite3": "^7.6.10",
    "@types/bluebird": "3.5.36",
    "@types/body-parser": "^1.16.4",
    "@types/chai": "*",
    "@types/chai-as-promised": "*",
    "@types/db-migrate-base": "0.0.14",
    "@types/db-migrate-pg": "^0.0.13",
    "@types/debug": "^0.0.30",
    "@types/ethereumjs-abi": "0.6.3",
    "@types/expect": "^1.20.4",
    "@types/express": "^4.0.36",
    "@types/mocha": "9.0.0",
    "@types/nock": "^8.2.1",
    "@types/node": "^20.12.12",
    "@types/pg": "8.6.3",
    "@types/request": "*",
    "@types/sinon": "^4.1.3",
    "@types/tmp": "^0.0.33",
    "@types/uuid": "^3.4.3",
    "better-sqlite3": "^11.0.0",
    "body-parser": "^1.15.2",
    "chai": "*",
    "chai-as-promised": "*",
    "crypto-browserify": "*",
    "db-migrate-plugin-typescript": "^2.0.0",
    "expect": "^29.7.0",
    "express": "^4.14.0",
    "istanbul": "^0.4.5",
    "mocha": "^10.4.0",
    "nock": "^13.5.4",
    "nyc": "^15.1.0",
    "os-browserify": "*",
    "path-browserify": "*",
    "pg": "^8.12.0",
    "rimraf": "*",
    "rollup": "^4.18.0",
    "sinon": "^4.1.5",
    "stream-browserify": "*",
    "terser-webpack-plugin": "*",
    "tmp": "0.0.33",
    "ts-loader": "*",
    "ts-mocha": "8.0.0",
    "tsconfig-paths": "3.12.0",
    "typescript": "*",
    "vm-browserify": "*",
    "webpack": "*",
    "webpack-cli": "*",
    "webpack-merge": "*"
  }
}
