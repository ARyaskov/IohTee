{
  "name": "@riaskov/iohtee",
  "version": "3.0.0",
  "description": "Micropayments lib for EVM",
  "author": "Sergey Ukustov <sergey.ukustov@machinomy.com>",
  "contributors": [
    {
      "name": "Andrei Riaskov",
      "email": "code@riaskov.com"
    }
  ],
  "license": "Apache-2.0",
  "keywords": [
    "micropayments",
    "ethereum",
    "state channels"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ARyaskov/IohTee.git"
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "clean": "rimraf lib",
    "build": "pnpm run format && pnpm run clean && pnpm run build:esm && pnpm run build:cjs && pnpm run bundle",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "bundle": "rollup -c rollup.config.mjs",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tsc --project tsconfig.esm.json --noEmit && tsc --project tsconfig.cjs.json --noEmit",
    "test": "node --import tsx --test src/**/*.test.ts",
    "prepublishOnly": "pnpm run lint && pnpm run test && pnpm run build"
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "source": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    }
  },
  "files": [
    "lib/",
    "examples/"
  ],
  "dependencies": {
    "@riaskov/iohtee-contracts": "workspace:*",
    "pg": "^8.13.1",
    "viem": "2.45.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^22.13.4",
    "@types/pg": "^8.11.10",
    "prettier": "^3.5.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.34.7",
    "tslib": "^2.8.1",
    "tsx": "^4.20.3",
    "typescript": "6.0.0-beta"
  }
}
