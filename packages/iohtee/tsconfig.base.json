{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "ES2023",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["./src/**/*"],
  "exclude": [
    "./src/**/*.test.ts",
    "./src/storage/**/migrations/**"
  ]
}
