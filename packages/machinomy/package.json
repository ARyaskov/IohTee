    "@types/nock": "^8.2.1",
    "@types/node": "14.18.3",
    "@types/pg": "8.6.3",
    "@types/request": "^2.0.13",
    "@types/sinon": "^4.1.3",
    "@types/sqlite3": "3.1.8",
    "@types/tmp": "^0.0.33",
    "@types/uuid": "^3.4.3",
    "body-parser": "^1.15.2",
