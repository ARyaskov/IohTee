{
  "name": "@riaskov/machinomy",
  "version": "2.0.0",
  "description": "Micropayments powered by Ethereum",
  "author": "Sergey Ukustov <sergey.ukustov@machinomy.com>",
  "contributors": [
    {
      "name": "Andrei Riaskov",
      "email": "code@riaskov.com"
    }
  ],
  "license": "Apache-2.0",
  "keywords": [
    "micropayments",
    "ethereum",
    "state channels"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ARyaskov/machinomy.git"
  },
  "scripts": {
    "clean:lib": "rimraf ./lib",
    "clean:migrations": "rimraf lib/storage/**/migrations/*.d.ts",
    "build": "yarn format && yarn build:esm && yarn build:cjs && yarn build:types && yarn tree-shaking:lib",
    "build:types": "tsc --project tsconfig.types.json",
    "build:esm": "rimraf lib/esm && tsc --project tsconfig.esm.json",
    "build:cjs": "rimraf lib/cjs && tsc --project tsconfig.cjs.json",
    "tree-shaking:lib": "rimraf lib/cjs/**/*.map && rimraf lib/esm/**/*.map && rimraf lib/types/**/*.map && rimraf lib/cjs/**/*.d.ts && rimraf lib/esm/**/*.d.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublish": "yarn lint && yarn build",
    "lint": "tslint --format stylish --project .",
    "migrate:postgresql": "db-migrate up --migrations-dir='./lib/storage/postgresql/migrations'",
    "migrate:sqlite": "db-migrate up --migrations-dir='./lib/storage/sqlite/migrations'",
    "migrate": "yarn migrate:postgresql && yarn migrate:sqlite",
    "integration_test": "yarn build && mocha integration_test/**/*.test.js",
    "test:all": "yarn test:nedb && yarn test:postgresql && yarn test:sqlite",
    "test:nedb": "DB_URL='nedb://' yarn test:pure",
    "test:postgresql": "DB_URL='postgresql://testuser:testpassword@127.0.0.1/testdb' yarn test:pure",
    "test:sqlite": "DB_URL='sqlite://./testdb.sqlite3' yarn test:pure",
    "test:pure": "ts-mocha -p tsconfig.json ./**/*.test.ts",
    "test": "yarn test:sqlite && yarn test:nedb && yarn test:postgresql",
    "coverage": "yarn build && nyc --reporter=lcov yarn run test"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/",
    "migrations/",
    "examples/"
  ],
  "dependencies": {
    "@machinomy/logger": "^0.2.5",
    "@machinomy/types-bn": "^0.0.3",
    "@machinomy/types-eth-sig-util": "^0.0.8",
    "@machinomy/types-truffle-contract": "^0.0.4",
    "@metamask/eth-sig-util": "4.0.1",
    "@riaskov/machinomy-contracts": "*",
    "await-semaphore": "^0.1.3",
    "browser-or-node": "^1.0.2",
    "commander": "^2.9.0",
    "connection-string": "^0.5.3",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "1.2.2",
    "db-migrate-sqlite3": "0.4.0",
    "debug": "^3.1.0",
    "decko": "^1.2.0",
    "ethereumjs-util": "^5.1.5",
    "nedb": "^1.8.0",
    "prompt": "^1.0.0",
    "request": "^2.76.0",
    "safe-buffer": "^5.1.2",
    "types-rlp": "^0.0.1",
    "uuid": "^3.2.1",
    "viem": "*"
  },
  "peerDependencies": {
    "pg": "8.12.0",
    "sqlite3": "5.1.7"
  },
  "devDependencies": {
    "@machinomy/types-ethereumjs-util": "^0.0.12",
    "@types/bluebird": "3.5.36",
    "@types/body-parser": "^1.16.4",
    "@types/chai": "*",
    "@types/chai-as-promised": "*",
    "@types/db-migrate-base": "0.0.14",
    "@types/db-migrate-pg": "^0.0.13",
    "@types/debug": "^0.0.30",
    "@types/ethereumjs-abi": "0.6.3",
    "@types/expect": "^1.20.4",
    "@types/express": "^4.0.36",
    "@types/mocha": "9.0.0",
    "@types/nedb": "^1.8.3",
    "@types/nock": "^8.2.1",
    "@types/node": "^20.12.12",
    "@types/node-fetch": "^2.6.11",
    "@types/pg": "8.6.3",
    "@types/request": "^2.0.13",
    "@types/sinon": "^4.1.3",
    "@types/sqlite3": "3.1.8",
    "@types/tmp": "^0.0.33",
    "@types/uuid": "^3.4.3",
    "body-parser": "^1.15.2",
    "chai": "*",
    "chai-as-promised": "*",
    "coveralls": "^3.1.1",
    "db-migrate-plugin-typescript": "^2.0.0",
    "expect": "^29.7.0",
    "express": "^4.14.0",
    "istanbul": "^0.4.5",
    "mocha": "9.1.3",
    "nock": "^9.0.9",
    "nyc": "^11.8.0",
    "pg": "8.12.0",
    "rimraf": "^5.0.7",
